{
	"name": "@tobper/svelte-components",
	"version": "0.0.22",
	"description": "Svelte components",
	"author": "Tobias Persson",
	"repository": "github:tobper/svelte-components",
	"scripts": {
		"dev": "vite dev --port 5001 --host 0.0.0.0",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:spelling": "cspell -c .vscode/cspell.json --no-progress **",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "eslint .",
		"preinstall": "npx only-allow pnpm"
	},
	"packageManager": "pnpm@9.10.0",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"@sveltejs/kit": "^2.5.27",
		"svelte": "^5.0.0-next.246"
	},
	"devDependencies": {
		"@floating-ui/dom": "^1.6.11",
		"@sveltejs/adapter-static": "^3.0.5",
		"@sveltejs/kit": "^2.5.27",
		"@sveltejs/package": "^2.3.5",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.7",
		"@tabler/icons-svelte": "^3.17.0",
		"@tobper/eon": "^0.0.10",
		"@types/eslint": "^9.6.1",
		"@types/ua-parser-js": "^0.7.39",
		"cspell": "^8.14.4",
		"eslint": "^9.11.0",
		"eslint-plugin-svelte": "^2.44.0",
		"globals": "^15.9.0",
		"publint": "^0.2.10",
		"svelte": "^5.0.0-next.246",
		"svelte-check": "^4.0.2",
		"typescript": "^5.6.2",
		"typescript-eslint": "^8.6.0",
		"vite": "^5.4.5",
		"vitest": "^2.1.1"
	},
	"dependencies": {
		"esm-env": "^1.0.0",
		"ua-parser-js": "^1.0.39"
	},
	"types": "./dist/index.d.ts",
	"type": "module"
}
